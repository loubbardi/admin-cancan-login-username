





<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
		
            	<%= content_tag(:div, flash[:error], :id => "flash_error", class: 'alert alert-danger') if flash[:error] %>
		<%= content_tag(:div, flash[:notice], :id => "flash_notice", class: 'alert alert-danger') if flash[:notice] %>
		<%= content_tag(:div, flash[:alert], :id => "flash_alert", class: 'alert alert-danger') if flash[:alert] %>
		
		<div class="form-group white-color-font">
			<label>Email address</label><%= f.text_field :login, class: "form-control",:placeholder => "Entrer votre Login ou Email" %>
		</div>
		<div class="form-group white-color-font">
			 <label>Password</label><%= f.password_field :password, class: "form-control", :placeholder => "Entrer votre Mot de passe" %>
		</div>
		<div>
			<%= f.button "Connexion", class: "btn btn-default" %>	
		</div>
	
		<div class="checkbox white-color-font">
			<label><% if devise_mapping.rememberable? -%><%= f.check_box :remember_me %> Garder ma session ouverte | <%= render "devise/shared/links" %><% end -%></label>
		</div>
		
			
<% end %>



			
				
					 
				
				
