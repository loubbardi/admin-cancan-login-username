<!DOCTYPE html>
<html>
<head>
  <title>Useradminacount</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if user_signed_in? %>
  <p>Signed in as: <%= current_user.email %></p>
  <p><%= link_to 'Log Out', destroy_user_session_path, :method => 'delete', :data => { :confirm => 'Are you sure?' } %></p>
<% end %>



<% [:notice, :error, :alert, :success].each do |level| %>
  <% unless flash[level].blank? %>
    <div class="<%= flash_class(level) %>">
      <%= content_tag :span, flash[level] %>
    </div>
  <% end %>
<% end %>

<%= yield %>

</body>
</html>
