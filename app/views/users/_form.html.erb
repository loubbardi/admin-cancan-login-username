<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="field"><%= f.label :username %><br />
<%= f.text_field :username %></div>


  <div class="field">
    <%= f.label :email %>
    <div class="controls">
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password, "Password" %>
    <div class="controls">
      <%= f.password_field :password %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
    </div>
  </div>
  
	<% if current_user.role? :admin %>
		<div class="field">
 
			<% for role in Role.find(:all) %> 
				<div class ="control-group">
					<%= f.label role.name , :class => 'control-label' %>
						<div class="controls">
							<%= radio_button_tag "user[role_ids][]", role.id, @user.roles.include?(role) %> 
						</div>
 
				</div>
			<% end %>
			<% for dossier in Dossier.find(:all) %> 
				<div class ="control-group">
					<p><%= check_box_tag  "user[dossier_ids][]", dossier.id, @user.dossiers.include?(dossier) %>
					<%=  dossier.RaisonSociale %></p>
				</div>
			<% end %>
		<% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>